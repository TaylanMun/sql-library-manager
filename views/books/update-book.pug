extends ../layout

block content
  header  
    h1= title
    div(class="wrapper")
        include errors
        form(action=`/books/${book.id}`, method="post")
            include form
            p 
                button(type="submit", style="margin-left:140px",class="btn btn-primary") Update Book
            p 
                a(class="btn btn-secondary", style="margin-left:140px", href="/books") Cancel
        form(method='post', action=`/books/${book.id}/delete`, onsubmit="return confirm('Do you really want to delete this book?');")
            p
                button(type='submit',style="margin-left:140px", class="btn btn-danger") Delete Book
